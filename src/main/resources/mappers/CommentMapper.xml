<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace = "com.juhyang.mbting.comment.dao.CommentDAO">

	<insert id="insertComment" parameterType = "map">
	INSERT INTO `server_comment`
	(`user_name`,
	 `comment`,
	 `user_id`,
	 `server_postId`,
	 `createdAt`,
	 `updatedAt`
	)
	VALUES(
	#{userName},
	#{comment},
	#{userId},
	#{postId},
	 now(),
	 now()
	)
	</insert>

	<select id ="selectComment" resultType ="com.juhyang.mbting.comment.model.Server_Comment">
	SELECT 
		`id`,
		`user_id`,
		`user_name`,
		`comment`
	FROM
		`server_comment`
	WHERE
	`server_postId` =#{postId}
	
	</select>
	<delete id ="deleteComment">
	DELETE FROM 
		`server_comment`
	WHERE
		`id` = #{commentId}
	</delete>
	<select id ="selectCommentListForMypage" resultType = "String">
	SELECT
		`comment`
	FROM
		`server_comment`
	WHERE
		`server_postId`=#{postId}
	AND 
		`user_id` = #{userId}
	LIMIT 1;
	</select>
	<select id ="selectPostId" resultType = "int">
	SELECT
		distinct `server_postId`
	FROM
		`server_comment`
	WHERE
		`user_id` = 8
	</select>
	
</mapper>	